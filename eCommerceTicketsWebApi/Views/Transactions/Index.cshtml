@using eCommerceTicketsWebApplication.DTOS
@model TransactionsDTO

@{
    ViewData["Title"] = "Perform transactions";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Perform Transactions</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Deposit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DepositAmount" class="control-label"></label>
                        <input asp-for="DepositAmount" class="form-control" /><input type="submit" value="Deposit" class="btn btn-outline-success float-right" />
                        <span asp-validation-for="DepositAmount" class="text-danger"></span>
                        
                    </div>
                </form>

                <form asp-action="Withdraw">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="WithdrawAmount" class="control-label"></label>
                        <input asp-for="WithdrawAmount" class="form-control" /><input type="submit" value="Withdraw" class="btn btn-outline-danger float-right" />
                        <span asp-validation-for="WithdrawAmount" class="text-danger"></span>
                        
                    </div>
                </form>

                <div>
                    
                </div>
            </div>
        </div>
    </div>
</div>